<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".game_main"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="64dp"
        android:layout_width="match_parent"
        android:layout_height="620dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/main_game_box_background"
        android:layout_marginHorizontal="32dp"
        android:elevation="8dp"
        android:outlineAmbientShadowColor="@color/primary"
        android:outlineSpotShadowColor="@color/primary">

        <ImageView
            android:id="@+id/main_game_image_background"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/questions"
            android:layout_marginTop="32dp"/>
        <TextView
            android:id="@+id/main_game_label"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_game_image_background"
            android:text="Test Your Level of Art"
            android:textAllCaps="false"
            android:textColor="@color/primary"
            android:textSize="36sp"
            android:textAlignment="center"
            android:fontFamily="@font/inter"/>
        <Button
            android:id="@+id/main_game_style_button"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="58dp"
            android:layout_marginTop="32dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_game_label"
            android:text="Style Quiz"
            android:background="@drawable/button_primary_white_stroke"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:fontFamily="@font/inter"
            android:padding="12dp"
            android:elevation="8dp"
            android:stateListAnimator="@null"
            android:outlineAmbientShadowColor="@color/sixth"
            android:outlineSpotShadowColor="@color/sixth"/>

        <Button
            android:id="@+id/main_game_artist_button"
            android:layout_marginHorizontal="58dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_game_style_button"
            android:text="Artist Quiz"
            android:textAllCaps="false"
            android:background="@drawable/button_primary_white_stroke"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/inter"
            android:padding="12dp"
            android:elevation="8dp"
            android:stateListAnimator="@null"
            android:outlineAmbientShadowColor="@color/sixth"
            android:outlineSpotShadowColor="@color/sixth"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <fragment
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:name="com.ahmed.artify.bottom_nav_bar"
        tools:layout="@layout/fragment_bottom_nav_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>