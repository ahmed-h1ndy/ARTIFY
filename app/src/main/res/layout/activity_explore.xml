<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Explore.ExploreActivity">

    <TextView
        android:id="@+id/explore_main_label"
        android:layout_marginTop="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explore"
        android:textColor="@color/black"
        android:fontFamily="@font/inter"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/explore_main_switch_layout"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/explore_main_label"
        android:background="@drawable/button_primary"
        android:padding="4dp"
        android:layout_marginHorizontal="8dp"
        >

        <Button
            android:id="@+id/explore_styles_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Styles"
            app:layout_constraintEnd_toStartOf="@+id/explore_artists_button"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/button_primary"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/inter"/>

        <Button
            android:id="@+id/explore_artists_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Artists"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/explore_styles_button"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/curved_white"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/inter"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.fragment.app.FragmentContainerView
        android:layout_marginTop="24dp"
        android:id="@+id/explore_fragment"
        android:name="com.ahmed.artify.Explore.Artist.artist_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/explore_nav_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/explore_main_switch_layout" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/explore_nav_bar"
        android:name="com.ahmed.artify.Helpers.bottom_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>