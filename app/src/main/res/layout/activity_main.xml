<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="32dp"
    android:background="@color/white">


    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/artify"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ARTIFY"
        android:textColor="@color/black"
        android:fontFamily="@font/logo"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_logo" />

    <TextView
        android:layout_marginTop="32dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/login_email_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-Mail"
        app:layout_constraintStart_toStartOf="@+id/login_email_value"
        app:layout_constraintTop_toBottomOf="@+id/login_title"
        android:textColor="@color/secondary"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/login_email_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/login_edit_background"
        android:ems="13"
        android:inputType="text"
        android:padding="16dp"
        android:hint="ahmed1234@example.com"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_email_title" />

    <TextView
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:id="@+id/login_password_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        app:layout_constraintStart_toStartOf="@+id/login_email_value"
        app:layout_constraintTop_toBottomOf="@+id/login_email_value"
        android:textColor="@color/secondary"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/login_password_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="13"
        android:inputType="textPassword"
        android:hint="password"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_password_title"
        android:background="@drawable/login_edit_background"
        android:padding="16dp"/>

    <Button
        android:layout_marginTop="32dp"
        android:id="@+id/login_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log in"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_password_value"
        android:background="@drawable/login_edit_background"
        android:backgroundTint="@color/primary"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:paddingVertical="16dp"/>

    <TextView
        android:id="@+id/login_auth_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="128dp"
        android:text="Log in with"
        app:layout_constraintBottom_toBottomOf="@+id/login_google_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/login_google_icon"
        android:textColor="@color/secondary"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/login_google_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/login_facebook_icon"
        app:layout_constraintEnd_toStartOf="@+id/login_facebook_icon"
        app:layout_constraintStart_toEndOf="@+id/login_auth_options"
        app:layout_constraintTop_toTopOf="@+id/login_facebook_icon"
        android:src="@drawable/google" />

    <ImageView
        android:id="@+id/login_facebook_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/login_auth_options"
        app:layout_constraintTop_toBottomOf="@+id/login_sign_in"
        android:src="@drawable/facebook_logo_icon" />

    <TextView
        android:id="@+id/login_no_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No account?"
        app:layout_constraintBottom_toBottomOf="@+id/login_sign_up"
        app:layout_constraintEnd_toEndOf="@+id/login_sign_up"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/login_sign_up"
        android:textColor="@color/secondary"
        android:textSize="18sp"
        />

    <Button
        android:layout_marginStart="8dp"
        android:id="@+id/login_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_facebook_icon"
        app:layout_constraintStart_toStartOf="@id/login_no_account"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="@color/black"
        />
</androidx.constraintlayout.widget.ConstraintLayout>