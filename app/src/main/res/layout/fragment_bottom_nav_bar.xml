<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="124dp"
    android:layout_gravity="bottom"
    tools:context=".bottom_nav_bar">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bottom_bar_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:id="@+id/null_center"/>

        <ImageView
            android:layout_marginEnd="48dp"
            android:layout_marginTop="8dp"
            android:id="@+id/nav_quiz_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/games_black"
            app:layout_constraintEnd_toStartOf="@id/null_center"/>

        <ImageView
            android:layout_marginTop="8dp"
            android:layout_marginStart="48dp"
            android:id="@+id/nav_explore_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/null_center"
            android:src="@drawable/baseline_search_black" />

        <TextView
            android:id="@+id/nav_quiz_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Games"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/nav_quiz_button"
            app:layout_constraintStart_toStartOf="@+id/nav_quiz_button"
            app:layout_constraintTop_toBottomOf="@+id/nav_quiz_button" />

        <TextView
            android:id="@+id/nav_explore_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Explore"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/nav_explore_button"
            app:layout_constraintStart_toStartOf="@+id/nav_explore_button"
            app:layout_constraintTop_toBottomOf="@+id/nav_explore_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="116dp"
        android:layout_height="116dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/upload_button_background"
        android:gravity="center">

    </LinearLayout>
    <LinearLayout
        android:id="@+id/nav_classification_button"
        android:layout_marginTop="5dp"
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center">
        <ImageView
            android:layout_marginTop="8dp"
            android:id="@+id/imageView6"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView7"
            app:layout_constraintStart_toEndOf="@+id/imageView5"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/upload_image" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="4dp"
            android:text="Upload"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/imageView6"
            app:layout_constraintStart_toStartOf="@+id/imageView6"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>