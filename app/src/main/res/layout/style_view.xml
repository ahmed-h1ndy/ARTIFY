<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="240dp"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/imagecard"
        android:layout_width="164dp"
        android:layout_height="164dp"
        android:layout_margin="5dp"
        android:elevation="10dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/style_image"
            android:layout_width="164dp"
            android:layout_height="164dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/monalisa" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/style_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/black"
        android:fontFamily="@font/inter"
        app:layout_constraintStart_toStartOf="@+id/imagecard"
        app:layout_constraintTop_toBottomOf="@+id/imagecard" />

    <TextView
        android:layout_marginTop="4dp"
        android:id="@+id/style_example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/black"
        android:fontFamily="@font/inter"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/style_name"
        app:layout_constraintTop_toBottomOf="@+id/style_name" />
</androidx.constraintlayout.widget.ConstraintLayout>