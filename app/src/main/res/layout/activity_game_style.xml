<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game.Style.GameStyle"
    android:background="@color/white">

    <ImageView
        android:layout_marginTop="48dp"
        android:layout_marginStart="32dp"
        android:id="@+id/quiz_style_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/baseline_arrow_back_ios_24" />

    <TextView
        android:id="@+id/quiz_style_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1/10"
        android:textSize="24sp"
        android:fontFamily="@font/inter"
        android:textColor="@color/fourth"
        app:layout_constraintBottom_toBottomOf="@+id/quiz_style_menu"
        app:layout_constraintEnd_toStartOf="@+id/quiz_style_menu"
        app:layout_constraintStart_toEndOf="@+id/quiz_style_back"
        app:layout_constraintTop_toTopOf="@id/quiz_style_back" />

    <ImageView
        android:layout_marginTop="48dp"
        android:layout_marginEnd="32dp"
        android:id="@+id/quiz_style_menu"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/dots" />

    <ImageView
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="24dp"
        android:scaleType="fitXY"
        android:id="@+id/quiz_style_question_img"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@drawable/curved_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quiz_style_progress_bar"
        android:src="@drawable/painting"
        android:clipToOutline="true"/>

    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/quiz_style_options_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Who is the artist?"
        android:textColor="@color/primary"
        android:fontFamily="@font/inter"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quiz_style_question_img" />

    <Button
        android:layout_marginTop="16dp"
        android:id="@+id/quiz_style_answer1"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="32dp"
        android:textSize="20sp"
        android:textColor="@color/third"
        android:fontFamily="@font/inter"
        android:padding="16dp"
        android:elevation="4dp"
        android:stateListAnimator="@null"
        android:layout_height="wrap_content"
        android:text="Jan Van Eyck"
        android:textAllCaps="false"
        android:background="@drawable/curved_white_primary_stroke_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quiz_style_options_label" />

    <Button
        android:layout_marginTop="12dp"
        android:id="@+id/quiz_style_answer2"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="32dp"
        android:textSize="20sp"
        android:textColor="@color/third"
        android:fontFamily="@font/inter"
        android:padding="16dp"
        android:elevation="4dp"
        android:stateListAnimator="@null"
        android:layout_height="wrap_content"
        android:text="Vincent van Gogh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAllCaps="false"
        android:background="@drawable/curved_white_primary_stroke_small"
        app:layout_constraintTop_toBottomOf="@+id/quiz_style_answer1" />

    <Button
        android:layout_marginTop="12dp"
        android:id="@+id/quiz_style_answer3"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="32dp"
        android:textSize="20sp"
        android:textColor="@color/third"
        android:fontFamily="@font/inter"
        android:padding="16dp"
        android:elevation="4dp"
        android:stateListAnimator="@null"
        android:layout_height="wrap_content"
        android:text="Francisco Goya"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/curved_white_primary_stroke_small"
        app:layout_constraintTop_toBottomOf="@+id/quiz_style_answer2" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/quiz_style_progress_baar"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:progress="60"
        app:indicatorColor="@color/primary"
        app:trackColor="@color/white"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:trackCornerRadius="8dp"
        app:trackThickness="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quiz_style_back"
        android:visibility="gone"
        />

    <ProgressBar
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:id="@+id/quiz_style_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:progress="100"
        android:progressTint="@color/primary"
        android:progressBackgroundTint="@color/white"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:trackCornerRadius="8dp"
        app:trackThickness="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quiz_style_back"

        />
    <fragment
        android:id="@+id/game_style_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:name="com.ahmed.artify.Helpers.bottom_nav_bar"
        tools:layout="@layout/fragment_bottom_nav_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>