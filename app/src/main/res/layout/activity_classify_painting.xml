<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Classify.ClassifyPainting">

    <TextView
        android:id="@+id/classify_image_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Discover New Arts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:layout_marginTop="64dp"
        android:textColor="@color/primary"
        android:textSize="36sp"
        android:fontFamily="@font/inter"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/classify_image_title"
        android:id="@+id/classify_image_uploaded"
        android:src="@drawable/baseline_image_search_24"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        android:visibility="invisible"
        />

    <ProgressBar
        android:id="@+id/classify_image_progress_bar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/classify_image_uploaded"
        app:layout_constraintEnd_toEndOf="@+id/classify_image_uploaded"
        app:layout_constraintStart_toStartOf="@+id/classify_image_uploaded"
        app:layout_constraintTop_toBottomOf="@id/classify_image_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/classify_image_title"
        android:id="@+id/classify_image_linear_layout"
        android:background="@drawable/upload_image_background"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        android:visibility="invisible"
        >
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/classify_image_upload_button"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_marginTop="64dp"
            android:src="@drawable/upload_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"/>

        <TextView
            android:id="@+id/classify_image_upload_label"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload a gallery photo"
            app:layout_constraintBottom_toBottomOf="@id/classify_image_upload_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/inter"
            />

    </LinearLayout>
    <ImageView
        android:layout_marginTop="8dp"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintTop_toBottomOf="@id/classify_image_linear_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/inquire"/>

    <TextView
        android:layout_marginTop="56dp"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You want to know about ..?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/classify_image_linear_layout"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/inter"/>

    <Button
        android:layout_marginTop="32dp"
        android:id="@+id/classify_image_style_button"
        android:layout_width="165dp"
        android:layout_height="55dp"
        android:text="Style"
        app:layout_constraintEnd_toStartOf="@+id/classify_image_artist"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:textColor="@color/white"
        android:fontFamily="@font/inter"
        android:background="@drawable/button_primary"
        android:visibility="invisible"/>

    <Button
        android:layout_marginTop="32dp"
        android:id="@+id/classify_image_artist"
        android:layout_width="165dp"
        android:layout_height="55dp"
        android:text="Artist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/classify_image_style_button"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:textColor="@color/white"
        android:fontFamily="@font/inter"
        android:background="@drawable/button_primary"
        android:visibility="invisible"/>
    <fragment
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:name="com.ahmed.artify.Helpers.bottom_nav_bar"
        tools:layout="@layout/fragment_bottom_nav_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>